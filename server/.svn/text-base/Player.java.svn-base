package server;

/**
 * @author Thomas Sammons
 * @author Alexis Lowe
 * @author Tymoor Rahman
 * @author Ahmed Qureshi
 * @author Francis Berti
 */
public class Player {
	private int direction;
	private int xPos, yPos;
	private String username;
	private String team;
	private String type;
	private int health;
	private int imageCounter;
	private int speed;
	private boolean dead;

	/**
	 * Creates a Player from a Shared Player
	 * 
	 * @param player
	 */
	public Player(shared.Player player) {
		this.xPos = player.xPos;
		this.direction = player.direction;
		this.yPos = player.yPos;
		this.username = player.username;
		this.team = player.team;
		this.type = player.type;
		this.health = player.health;
		this.imageCounter = player.counterimage;
		this.speed = player.speed;
	}

	/**
	 * Gets the imageCounter
	 * 
	 * @return imagecounter
	 */
	public int getImageCounter() {
		return imageCounter;
	}

	/**
	 * Sets the imageCounter
	 * 
	 * @param imageCounter
	 */
	public void setImageCounter(int imageCounter) {
		this.imageCounter = imageCounter;
	}

	/**
	 * Get dead
	 * 
	 * @return dead
	 */
	public boolean isDead() {
		return dead;
	}

	/**
	 * Sets dead
	 * 
	 * @param dead
	 */
	public void setDead(boolean dead) {
		this.dead = dead;
	}

	/**
	 * Gets X position
	 * 
	 * @return xPos
	 */
	public int getxPos() {
		return xPos;
	}

	/**
	 * Sets X position
	 * 
	 * @param xPos
	 */
	public void setxPos(int xPos) {
		this.xPos = xPos;
	}

	/**
	 * Gets Y position
	 * 
	 * @return yPos
	 */
	public int getyPos() {
		return yPos;
	}

	/**
	 * Sets Y position
	 * 
	 * @param yPos
	 */
	public void setyPos(int yPos) {
		this.yPos = yPos;
	}

	/**
	 * Gets Direction
	 * 
	 * @return direction
	 */
	public int getDirection() {
		return direction;
	}

	/**
	 * Sets Direction
	 * 
	 * @param direction
	 */
	public void setDirection(int direction) {
		this.direction = direction;
	}

	/**
	 * Gets Username
	 * 
	 * @return username
	 */
	public String getUsername() {
		return username;
	}

	/**
	 * Get Team
	 * 
	 * @return team
	 */
	public String getTeam() {
		return team;
	}

	/**
	 * Get Class type
	 * 
	 * @return type
	 */
	public String getType() {
		return type;
	}

	/**
	 * Get Health
	 * 
	 * @return health
	 */
	public int getHealth() {
		return health;
	}

	/**
	 * Sets Health
	 * 
	 * @param health
	 */
	public void setHealth(int health) {
		this.health = health;
	}

	/**
	 * Get Speed
	 * 
	 * @return speed
	 */
	public int getSpeed() {
		return speed;
	}

	/**
	 * Get Speed
	 * 
	 * @param speed
	 */
	public void setSpeed(int speed) {
		this.speed = speed;
	}
}
